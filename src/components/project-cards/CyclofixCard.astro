---
import HorizontalCard from "@components/HorizontalCard.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<HorizontalCard
  badges={[
    { label: "cyclofix.com", url: "https://www.cyclofix.com/" },
    {
      label: "android",
      url: "https://play.google.com/store/apps/details?id=com.cyclofix&hl=fr",
    },
    {
      label: "ios",
      url: "https://apps.apple.com/fr/app/cyclofix-reparation-velo/id1220523697",
    },
  ]}
  title={t("cyclofix.title")}
  img="/cyclofix.png"
  desc={t("cyclofix.desc")}
/>
