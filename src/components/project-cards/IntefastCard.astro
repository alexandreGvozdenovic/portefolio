---
import HorizontalCard from "@components/HorizontalCard.astro";
import { getLangFromUrl, useTranslations } from "@i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<HorizontalCard
  title="Interfast"
  img="/interfast.png"
  desc="Interfast est la solution la plus simple et la plus complète qui s'adapte à chaque métier du bâtiment."
  badges={[
    { label: "interfast.fr", url: "https://www.inter-fast.fr/" },
    {
      label: "android",
      url: "https://play.google.com/store/apps/details?id=com.interfast.interfast",
    },
    {
      label: "ios",
      url: "https://apps.apple.com/us/app/interfast/id1536410979",
    },
  ]}
/>
