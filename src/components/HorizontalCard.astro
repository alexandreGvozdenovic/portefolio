---
const { title, img, desc, url, badges, tags, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
  <div class="hero-content flex-col md:flex-row">
    {
      img && (
        <Image
          src={img}
          width={750}
          height={422}
          format="webp"
          alt={title}
          class="max-w-full md:max-w-[13rem] rounded-lg"
        />
      )
    }
    <div class="grow w-full">
      <h1 class="text-xl font-bold">
        {title}
        {
          badges &&
            badges.map((badge) => (
              <a href={badge.url ? badge.url : ""} target="_blank">
                <div class="badge badge-secondary mx-2">{badge.label}</div>
              </a>
            ))
        }
      </h1>
      <p class="py-1 text-1xl">{desc}</p>
      <div class="card-actions justify-end">
        {tags && tags.map((tag) => <span>{tag}</span>)}
      </div>
    </div>
  </div>
</div>
