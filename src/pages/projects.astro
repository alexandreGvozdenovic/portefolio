---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Projects" sideBarActiveItemID="projects">
  <HorizontalCard
    badges={[{ label: "revolugo.com", url: "https://www.revolugo.com/" }]}
    title="Revolugo"
    img="/hotel.png"
    desc="Revolugo simplifies l’expérience de réservation d'hébergement sur tous les plus grands événements mondiaux, en garantissant que les besoins de chacun soient comblés par une offre abordable ,fournie et personnalisée.."
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    badges={[
      { label: "cyclofix.com", url: "https://www.cyclofix.com/" },
      {
        label: "android",
        url: "https://play.google.com/store/apps/details?id=com.cyclofix&hl=fr",
      },
      {
        label: "ios",
        url: "https://apps.apple.com/fr/app/cyclofix-reparation-velo/id1220523697",
      },
    ]}
    title="Cyclofix"
    img="/cyclofix.png"
    desc="Cyclofix connecte utilisateurs de vélos, trottinettes électriques à des réparateurs expérimentés qui se déplacent partout, que ce soit à domicile, au travail ou dans la rue."
  />

  <HorizontalCard
    title="Interfast"
    img="/interfast.png"
    desc="Interfast est la solution la plus simple et la plus complète qui s'adapte à chaque métier du bâtiment."
    badges={[
      { label: "interfast.fr", url: "https://www.inter-fast.fr/" },
      {
        label: "android",
        url: "https://play.google.com/store/apps/details?id=com.interfast.interfast",
      },
      {
        label: "ios",
        url: "https://apps.apple.com/us/app/interfast/id1536410979",
      },
    ]}
  />
  <div class="divider my-0"></div>
</BaseLayout>
